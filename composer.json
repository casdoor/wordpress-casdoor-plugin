{
    "name": "casdoor/wordpress-casdoor-plugin",
    "description": "WordPress plugin for Casdoor SSO integration",
    "type": "wordpress-plugin",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Casdoor",
            "homepage": "https://github.com/casdoor/"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^1.0",
        "brain/monkey": "^2.6"
    },
    "autoload": {
        "classmap": [
            "Casdoor.php",
            "includes/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}
